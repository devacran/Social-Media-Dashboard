$font1 = 'Inter', sans-serif

$primaryColor = hsl(230, 17%, 14%)
$secondaryColor = hsl(227, 47%, 96%)
$primaryColorDarkMode = hsl(0, 0%, 100%)

$fontPrimaryColor = hsl(230, 17%, 14%)
$fontSecondaryColor = hsl(228, 12%, 44%)

$fontPrimaryColorDarkMode = hsl(0, 0%, 100%)
$fontSecondaryColorDarkMode = hsl(0, 0%, 100%)

$highlightFontColor = hsl(163, 72%, 41%)


$blue = blue
$boxPadding = 25px
$instagramGradient = linear gradient hsl(37, 97%, 70%) to hsl(329, 70%, 58%)
$facebookGradient = hsl(208, 92%, 53%)
$twitterGradient = hsl(203, 89%, 53%)
$youtubeGradient = hsl(348, 97%, 39%)
$toggleLightColor = hsl(230, 22%, 74%)
$darkBody = hsl(230, 17%, 14%)
$darkCardBG = hsl(228, 28%, 20%)

mobileWidth = 460px
tabletWidth = 725px
deskWidth = 1024px

grid($col)
  display: grid
  margin-bottom: calc( $boxPadding * 2)
  grid-template-columns: repeat($col, 1fr)
  grid-gap: $boxPadding
  border: 1px solid transparent

mqMobile = "only screen and (max-width: " + mobileWidth + ")"
mqTablet     = "only screen and (max-width: " + tabletWidth + ")"
mqDesk     = "only screen and (max-width: " + deskWidth + ")"

borderColor($color)
  border-top: 4px solid $color

Title($size, $mode = 'light')
  if($mode == 'dark')
    color: $fontPrimaryColorDarkMode
  font-weight: bold
  if $size == 'medium'
    font-size: 30px
  if $size == 'large'
    font-size: 40px

Subtitle($weight, $mode = 'light')
  font-size: 14px
  font-weight: $weight
  if $mode == 'dark'
    color: $fontSecondaryColorDarkMode
